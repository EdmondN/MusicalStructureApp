<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/love_music"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/now_playing"
        style="@style/NowPlayingStyle"
        android:text="@string/now_playing" />

    <ImageView
        android:id="@+id/imageViewPrevius"
        style="@style/PreviusImageStyle"
        app:srcCompat="@drawable/ic_skip_previous_black_24dp"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/imageViewPlay"
        style="@style/PlayImageStyle"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/imageViewPause"
        style="@style/PauseImageStyle"
        app:srcCompat="@drawable/ic_pause_black_24dp"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/imageViewNext"
        style="@style/NextImageStyle"
        app:srcCompat="@drawable/ic_skip_next_black_24dp"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/home_TextView"
        android:text="@string/home"
        style="@style/homeStyle" />

</RelativeLayout>